<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/top_text_pads"
    tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/photo_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_news_height"
            android:background="@color/white"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slider_dots_margin_bottom_and_list_item"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="Name"
            android:layout_above="@id/shortlay"
            android:textColor="@color/default_news_background"
            android:textSize="@dimen/news_main_text_size" />

        <LinearLayout
            android:id="@+id/shortlay"
            android:layout_alignBottom="@id/photo_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_bottom_top_new_shortlay"
            android:layout_marginTop="@dimen/margin_top_top_new_shortlay"
            android:layout_marginBottom="@dimen/margin_left_bottom_top_new_shortlay"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="Type"
                android:textColor="#3492DD"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_top"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="cost"
                android:textColor="#E7E5E5"
                android:textSize="16sp" />
        </LinearLayout>

</RelativeLayout>

